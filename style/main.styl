@import '_util'

bg-color = #fff
border-color = #ccc
hover-color = #eee
active-color = #ddd
font-color = #777
primary-color = #88f
sidebar-width = 140px
editor-width = 500px

html
body
  margin 0
  height 100%

#app
  width 100%
  height 100%
  display flex
  flex-direction row
  align-items stretch

#editor
  display flex
  flex-direction row
  align-items stretch
  .tab
    .item
      position relative
      background-color bg-color
      display block
      box-sizing border-box
      width sidebar-width
      border-bottom 1px solid border-color
      padding 11px 12px
      cursor pointer
      .label
        // font-weight bold
        color font-color
        font-size 12px
        display block
        width sidebar-width - 12px
        user-select none
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
      &.active
        border-right 5px solid primary-color
      &:hover
        background-color hover-color
      &:active
        background-color active-color
      &.run .label
      &.add .label
        width auto
        text-align center
        color primary-color
    .tooltip
      position absolute
      left sidebar-width
      top 5px
      z-index 5
  .field
    box-sizing border-box
    border-left 1px solid border-color
    position relative
    width editor-width
    .item
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 0
      width 100%
      fit-to-parent()
      &.active
        z-index 1
      .codemirror-container
        width 100%
        fit-to-parent()
        > div
          font-family "Inconsolata", "Monaco", "Andale Mono", "Lucida Console", "Bitstream Vera Sans Mono", "Courier New", Courier, monospace
          font-size 12px
          width 100%
          height auto

#preview
  flex-grow 1
  fit-to-parent()
  .iframe
    box-sizing border-box
    border 0px
    border-left 1px solid border-color

#overlay
  .shade
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-color rgba(0, 0, 0, 0.5)
    z-index 10
    display flex
    justify-content center
    align-items center
  .plate
    // position absolute
    // top: 50%;
    // left: 50%;
    // transform: translate(-50%, -50%);
    width 300px
    padding 20px 15px 15px
    box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.5)
    background-color bg-color
    border-radius 8px
  .label
    font-size 13px
    color font-color
    font-weight bold
    margin-bottom 12px
    text-align center
  .message
    font-size 11px
    color font-color
    margin 3px 0
    padding-left 5px
    &.error
      color #f88
  .bold
    font-weight bold
  .title
    color font-color
    width 100%
    font-size 30px
    box-sizing border-box
    padding 14px 18px 12px
    border-radius 8px
    background-color bg-color
    outline none
    border 1px solid border-color
    margin-bottom 5px
    font-weight normal
    &:focus
      border-color primary-color
  .horizontal
    display flex
    justify-content space-between
    margin-top 13px
  .button
    color font-color
    text-align center
    padding 10px 0 8px
    width 100px
    font-size 13px
    // font-weight bold
    border-radius 8px
    border 1px solid border-color
    user-select none
    cursor pointer
    background-color bg-color
    &.main
      &:hover
        border-color primary-color
      &:active
        background-color hover-color
      &.disabled
        border-color border-color
        background-color bg-color
    &.sub
      border 1px solid #f88
      &:hover
        color bg-color
        background-color #f88
      &:active
        background-color darken(#f88, 5)
      &.disabled
        color font-color
        background-color bg-color
    &.disabled
      cursor not-allowed
      opacity 0.4

